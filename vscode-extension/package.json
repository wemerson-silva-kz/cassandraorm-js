{
  "name": "cassandraorm-vscode",
  "displayName": "CassandraORM JS",
  "description": "IntelliSense, snippets, and tools for CassandraORM JS development",
  "version": "1.0.0",
  "publisher": "cassandraorm",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "cassandra",
    "orm",
    "database",
    "typescript",
    "javascript",
    "ai",
    "ml"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cassandraorm-schema",
        "aliases": ["CassandraORM Schema", "cassandraorm"],
        "extensions": [".cassandra.ts", ".cassandra.js"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cassandraorm-schema",
        "scopeName": "source.cassandraorm",
        "path": "./syntaxes/cassandraorm.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ],
    "commands": [
      {
        "command": "cassandraorm.validateSchema",
        "title": "Validate Schema",
        "category": "CassandraORM"
      },
      {
        "command": "cassandraorm.generateMigration",
        "title": "Generate Migration",
        "category": "CassandraORM"
      },
      {
        "command": "cassandraorm.openDashboard",
        "title": "Open Dashboard",
        "category": "CassandraORM"
      },
      {
        "command": "cassandraorm.runQuery",
        "title": "Run Query",
        "category": "CassandraORM"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == typescript || editorLangId == javascript",
          "command": "cassandraorm.validateSchema",
          "group": "cassandraorm"
        }
      ],
      "commandPalette": [
        {
          "command": "cassandraorm.validateSchema",
          "when": "editorLangId == typescript || editorLangId == javascript"
        },
        {
          "command": "cassandraorm.generateMigration"
        },
        {
          "command": "cassandraorm.openDashboard"
        },
        {
          "command": "cassandraorm.runQuery"
        }
      ]
    },
    "configuration": {
      "title": "CassandraORM",
      "properties": {
        "cassandraorm.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense for CassandraORM schemas"
        },
        "cassandraorm.dashboardPort": {
          "type": "number",
          "default": 3000,
          "description": "Port for CassandraORM dashboard"
        },
        "cassandraorm.autoValidation": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate schemas on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cassandraorm-js": "^1.0.0"
  }
}
