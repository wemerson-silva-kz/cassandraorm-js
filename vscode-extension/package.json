{
  "name": "cassandraorm-vscode",
  "displayName": "CassandraORM JS",
  "description": "Advanced support for CassandraORM JS - IntelliSense, snippets, and debugging",
  "version": "2.0.0",
  "publisher": "wemerson-silva",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "cassandra",
    "scylladb",
    "orm",
    "typescript",
    "database",
    "nosql"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "workspaceContains:**/cassandraorm.config.*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cassandraorm-schema",
        "aliases": ["CassandraORM Schema", "cassandraorm"],
        "extensions": [".cassandra", ".cql"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cassandraorm-schema",
        "scopeName": "source.cassandraorm",
        "path": "./syntaxes/cassandraorm.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ],
    "commands": [
      {
        "command": "cassandraorm.generateModel",
        "title": "Generate Model",
        "category": "CassandraORM"
      },
      {
        "command": "cassandraorm.runMigration",
        "title": "Run Migration",
        "category": "CassandraORM"
      },
      {
        "command": "cassandraorm.openDashboard",
        "title": "Open Dashboard",
        "category": "CassandraORM"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "cassandraorm.generateModel",
          "when": "explorerResourceIsFolder",
          "group": "cassandraorm"
        }
      ]
    },
    "configuration": {
      "title": "CassandraORM",
      "properties": {
        "cassandraorm.autoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion for CassandraORM"
        },
        "cassandraorm.diagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics and error checking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
