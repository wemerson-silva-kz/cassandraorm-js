{
  "name": "cassandraorm-js",
  "version": "2.0.0",
  "description": "Modern ORM for Apache Cassandra and ScyllaDB with advanced features: Connection Pooling, Query Builder, Migrations, Monitoring, and Plugin System",
  "main": "src/index.ts",
  "types": "src/types.ts",
  "keywords": [
    "cassandra", 
    "orm", 
    "scylladb", 
    "database", 
    "nosql", 
    "typescript",
    "query-builder",
    "migrations",
    "monitoring",
    "plugins",
    "connection-pooling"
  ],
  "author": "Wemerson Silva <wemerson.silva.kz@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wemerson-silva-kz/cassandraorm-js.git"
  },
  "bugs": {
    "url": "https://github.com/wemerson-silva-kz/cassandraorm-js/issues"
  },
  "homepage": "https://github.com/wemerson-silva-kz/cassandraorm-js#readme",
  "scripts": {
    "test": "node test-ci-simple.js",
    "test:bun": "bun test test/*.test.ts",
    "test:bulk": "bun run test-bulk-writer.ts",
    "test:ci": "bun run test-ci.ts",
    "test:ci:node": "node test-ci-simple.js",
    "test:features": "bun run test-features-simple.ts",
    "test:auto": "bun run test-auto-create.ts",
    "test-connection": "bun run test-connection.ts",
    "test-orm": "bun run test-orm.ts",
    "test-advanced": "bun test test/advanced.test.ts",
    "lint": "eslint src/**/*.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "cassandra-driver": "^4.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "src/",
    "README.md",
    "README.pt.md",
    "LICENSE",
    "docs/"
  ]
}
